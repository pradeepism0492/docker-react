sudo: required
services:
  - docker

  before_install:
    - docker build -t pradeepsync04/docker-react -f Dockerfile.dev .

script:
  - docker run pradeepsync04/docker-react npm run test -- --coverage

deploy:
  provider: elasticbeanstalk
  region: "ap-northeast-1"
  app: "docker"
  env: "Docker-env"
  bucket_name: "elasticbeanstalk-ap-northeast-1-309315394066"
  bucket_path: "docker"
  on:
    branch: master